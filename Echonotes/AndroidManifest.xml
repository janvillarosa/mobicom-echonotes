<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobicom.echonotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Echonotes"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.mobicom.echonotes.ListOfNotes"
            android:label="My Echonotes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobicom.echonotes.RecordNote"
            android:label="Recording"
            android:parentActivityName="com.mobicom.echonotes.ListOfNotes" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobicom.echonotes.ListOfNotes"/>
        </activity>
    </application>

</manifest>
